}

/* Force hero layout override (prevents base.njk global header rules from breaking layout) */
header.ffm-hero{
  display:flex !important;
  flex-direction:column !important;
  align-items:center !important;
}

.ffm-hero h1{
  font-size:clamp(48px,6vw,74px);
  font-weight:900;
  letter-spacing:-0.02em;
  display:flex;
  gap:14px;
  flex-wrap:wrap;
  justify-content:center;
  margin:10px 0 12px;
}

.ffm-hero h1 .gold{color:var(--gold);white-space:nowrap;}
.ffm-hero h1 .white{white-space:nowrap;}

.ffm-hero p{
  max-width:760px;
  margin:0 auto;
  font-size:20px;
}

.ffm-pills{
  display:flex;
  justify-content:center;
  gap:10px;
  flex-wrap:wrap;
  margin-bottom:25px;
}

.ffm-pill{
  border:1px solid rgba(202,162,70,.35);
  padding:8px 14px;
  border-radius:999px;
  font-size:12px;
  text-transform:uppercase;
  letter-spacing:.16em;
  background:rgba(0,0,0,.2);
}

.ffm-cohort{
  margin:30px auto 20px;
  max-width:760px;
  border:1px solid var(--stroke);
  border-radius:14px;
  padding:18px;
  background:linear-gradient(180deg,rgba(255,255,255,.05),rgba(255,255,255,.02));
}

.ffm-cohort .title{font-weight:800;}
.ffm-cohort .sub{margin-top:8px;font-size:14px;color:var(--muted);}

.ffm-btn{
  display:inline-flex;
  align-items:center;
  justify-content:center;
  padding:15px 24px;
  border-radius:12px;
  font-weight:800;
  text-transform:uppercase;
  font-size:13px;
  text-decoration:none;
  margin-top:18px;
  min-width:220px;
  border:1px solid var(--stroke2);
}

.ffm-btn.primary{
  background:linear-gradient(180deg,rgba(202,162,70,.95),rgba(202,162,70,.8));
  color:#0a0f18;
  border-color: rgba(202,162,70,.55);
}

.ffm-btn:hover{filter:brightness(1.05);transform:translateY(-1px);}

.ffm-section{margin-top:70px;}
.ffm-section h2{
  font-size:28px;
  text-transform:uppercase;
  letter-spacing:.1em;
  font-weight:900;
}

.ffm-grid-2{
  display:grid;
  grid-template-columns:repeat(2,1fr);
  gap:18px;
  margin-top:25px;
}

.ffm-card{
  border:1px solid var(--stroke);
  border-radius:14px;
  padding:18px;
  background:linear-gradient(180deg,rgba(255,255,255,.05),rgba(255,255,255,.02));
}

/* Testimonials look */
.ffm-testimonial{
  position: relative;
  border-color: rgba(202,162,70,.22);
  box-shadow:
    0 10px 28px rgba(0,0,0,.25),
    0 0 0 1px rgba(202,162,70,.08),
    0 0 28px rgba(202,162,70,.10);
}

.ffm-quote{
  font-size:16px;
  line-height:1.65;
  color: rgba(232,237,246,.92);
  margin:0;
  position: relative;
  padding-left: 28px;
}

/* Gold quote marks */
.ffm-quote::before{
  content: "“";
  position: absolute;
  left: 0;
  top: -6px;
  font-size: 44px;
  line-height: 1;
  color: rgba(202,162,70,.9);
  text-shadow: 0 0 16px rgba(202,162,70,.25);
}

/* Read more (details/summary) */
.ffm-details{
  margin-top: 10px;
}
.ffm-details summary{
  list-style: none;
  cursor: pointer;
  display: inline-flex;
  align-items:center;
  gap: 8px;
  padding: 8px 10px;
  border-radius: 10px;
  border: 1px solid rgba(202,162,70,.22);
  background: rgba(0,0,0,.18);
  color: rgba(232,237,246,.88);
  font-size: 13px;
  user-select: none;
}
.ffm-details summary::-webkit-details-marker{ display:none; }

.ffm-details summary::after{
  content: "▾";
  color: rgba(202,162,70,.9);
  transform: translateY(-1px);
}

.ffm-details[open] summary::after{
  content: "▴";
}

.ffm-details .ffm-more{
  margin-top: 12px;
  color: rgba(232,237,246,.86);
  line-height: 1.65;
  font-size: 15px;
}

.ffm-attr{
  margin-top:12px;
  font-size:13px;
  color: rgba(169,179,199,.92);
}

.ffm-attr strong{ color: rgba(232,237,246,.92); }

@media(max-width:900px){
  .ffm-grid-2{grid-template-columns:1fr;}
}
</style>

