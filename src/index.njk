<script>
  // Optional: keep dates "dynamic" without breaking builds.
  // Set your next cohort date here (local to you), and it updates the pills + lines.
  // If you want it to always calculate "two Wednesdays from now", tell me and I’ll switch it.
  (function () {
    // EDIT THESE TWO LINES ONLY if needed:
    const startDateISO = "2026-03-11"; // YYYY-MM-DD
    const startTimeLabel = "6:00 PM";

    const d = new Date(startDateISO + "T12:00:00");
    if (isNaN(d.getTime())) return;

    const weekday = d.toLocaleDateString(undefined, { weekday: "long" });
    const month = d.toLocaleDateString(undefined, { month: "long" });
    const day = d.toLocaleDateString(undefined, { day: "numeric" });
    const year = d.toLocaleDateString(undefined, { year: "numeric" });

    // Short pill + cohort line
    const shortMonth = d.toLocaleDateString(undefined, { month: "short" });
    const shortDay = d.toLocaleDateString(undefined, { day: "numeric" });

    const pill = document.getElementById("ffm-start-pill");
    const cohort = document.getElementById("ffm-cohort-line");
    const reg = document.getElementById("ffm-register-line");

    if (pill) pill.textContent = `Starts ${shortMonth} ${shortDay}, ${year}`;
    if (cohort) cohort.textContent = `Wed, ${shortMonth} ${shortDay}, ${year} • ${startTimeLabel}`;
    if (reg) reg.textContent = `${weekday}, ${month} ${day}, ${year} at ${startTimeLabel}`;
  })();
</script>
