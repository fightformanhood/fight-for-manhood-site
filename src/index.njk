<style>
  :root{
    --bg0:#070b12;
    --bg1:#0b1324;
    --card:#0f172a;
    --card2:#0b1221;
    --text:#e8edf6;
    --muted:#a9b3c7;
    --gold:#caa246;
    --line: rgba(202,162,70,.28);
    --stroke: rgba(255,255,255,.08);
    --stroke2: rgba(255,255,255,.12);
    --shadow: 0 20px 60px rgba(0,0,0,.45);
  }

  /* Page backdrop */
  .ffm-wrap{
    min-height: 100vh;
    background:
      radial-gradient(1000px 700px at 50% -10%, rgba(255,255,255,.10), transparent 60%),
      radial-gradient(900px 700px at 50% 15%, rgba(202,162,70,.10), transparent 65%),
      radial-gradient(1200px 900px at 50% 80%, rgba(255,255,255,.06), transparent 55%),
      linear-gradient(180deg, var(--bg0) 0%, var(--bg1) 55%, var(--bg0) 100%);
    color: var(--text);
    padding: clamp(24px, 4vw, 56px) 18px 64px;
  }

  .ffm-container{
    max-width: 980px;
    margin: 0 auto;
  }

  /* Helpers */
  .ffm-center{ text-align:center; }
  .ffm-muted{ color: var(--muted); }
  .ffm-gold{ color: var(--gold); }
  .ffm-divider{
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--line), transparent);
    margin: 26px auto;
    width: min(720px, 92%);
  }

  /* Top pills */
  .ffm-pills{
    display:flex;
    justify-content:center;
    gap: 10px;
    flex-wrap:wrap;
    margin-bottom: 22px;
  }
  .ffm-pill{
    border: 1px solid rgba(202,162,70,.35);
    color: rgba(235,240,250,.92);
    background: rgba(0,0,0,.22);
    padding: 8px 14px;
    border-radius: 999px;
    font-size: 12px;
    letter-spacing: .16em;
    text-transform: uppercase;
    backdrop-filter: blur(6px);
  }
  .ffm-pill.alt{
    border-color: rgba(255,255,255,.12);
  }

  /* Hero */
  .ffm-hero h1{
    font-size: clamp(44px, 6.2vw, 74px);
    line-height: 1.02;
    margin: 10px 0 10px;
    font-weight: 900;
    letter-spacing: -0.02em;
  }
  .ffm-hero h1 span{
    display:block;
    margin-top: 6px;
  }
  .ffm-hero p{
    font-size: clamp(16px, 1.75vw, 20px);
    margin: 0 auto;
    max-width: 720px;
    color: rgba(232,237,246,.88);
  }

  /* Cohort bar */
  .ffm-cohort{
    margin: 26px auto 18px;
    max-width: 760px;
    background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03));
    border: 1px solid var(--stroke);
    border-radius: 14px;
    padding: 16px 18px;
    box-shadow: 0 16px 40px rgba(0,0,0,.28);
  }
  .ffm-cohort .title{
    font-weight: 800;
    letter-spacing: .02em;
  }
  .ffm-cohort .sub{
    margin-top: 6px;
    font-size: 13px;
    color: rgba(169,179,199,.9);
  }

  /* CTA buttons */
  .ffm-ctas{
    display:flex;
    justify-content:center;
    gap: 16px;
    flex-wrap:wrap;
    margin: 18px 0 18px;
  }
  .ffm-btn{
    display:inline-flex;
    align-items:center;
    justify-content:center;
    gap: 10px;
    padding: 14px 20px;
    border-radius: 12px;
    font-weight: 800;
    letter-spacing: .06em;
    text-transform: uppercase;
    font-size: 12px;
    border: 1px solid var(--stroke2);
    background: rgba(0,0,0,.25);
    color: var(--text);
    text-decoration:none;
    min-width: 190px;
    box-shadow: 0 10px 28px rgba(0,0,0,.25);
  }
  .ffm-btn.primary{
    background: linear-gradient(180deg, rgba(202,162,70,.95), rgba(202,162,70,.78));
    border-color: rgba(202,162,70,.55);
    color: #0a0f18;
  }
  .ffm-btn:hover{
    transform: translateY(-1px);
    filter: brightness(1.05);
  }

  /* Chips row */
  .ffm-chips{
    display:flex;
    justify-content:center;
    gap: 12px;
    flex-wrap:wrap;
    margin-top: 12px;
  }
  .ffm-chip{
    border: 1px solid var(--stroke);
    background: rgba(0,0,0,.18);
    padding: 10px 14px;
    border-radius: 12px;
    font-size: 12px;
    color: rgba(232,237,246,.88);
  }
  .ffm-chip strong{ color: rgba(232,237,246,.95); }

  /* Sections */
  .ffm-section{
    margin-top: 54px;
  }
  .ffm-section h2{
    font-size: 28px;
    letter-spacing: .08em;
    text-transform: uppercase;
    margin: 0 0 10px;
    font-weight: 900;
  }
  .ffm-lead{
    font-size: 18px;
    margin: 0 0 10px;
    color: rgba(232,237,246,.92);
    font-weight: 800;
  }
  .ffm-body{
    margin: 0;
    color: rgba(169,179,199,.92);
    max-width: 820px;
    line-height: 1.6;
  }

  /* Cards grid */
  .ffm-grid-3{
    display:grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 14px;
    margin-top: 18px;
  }
  .ffm-grid-2{
    display:grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 14px;
    margin-top: 18px;
  }
  .ffm-card{
    background: linear-gradient(180deg, rgba(255,255,255,.05), rgba(255,255,255,.02));
    border: 1px solid var(--stroke);
    border-radius: 14px;
    padding: 16px 16px 14px;
  }
  .ffm-kicker{
    font-size: 11px;
    letter-spacing: .18em;
    text-transform: uppercase;
    color: var(--gold);
    font-weight: 900;
    margin-bottom: 8px;
  }
  .ffm-card p{
    margin: 0;
    color: rgba(232,237,246,.86);
    font-size: 14px;
    line-height: 1.55;
  }

  /* Tone callout */
  .ffm-callout{
    margin-top: 16px;
    padding: 16px 16px 14px;
    border-radius: 14px;
    border: 1px solid var(--stroke);
    background: linear-gradient(180deg, rgba(255,255,255,.05), rgba(255,255,255,.02));
  }

  /* Register block */
  .ffm-register{
    margin-top: 56px;
    padding-top: 18px;
  }
  .ffm-register h2{
    margin-bottom: 10px;
  }
  .ffm-register p{
    margin: 0 auto 18px;
    max-width: 760px;
    color: rgba(169,179,199,.92);
    line-height: 1.6;
  }

  /* Responsive */
  @media (max-width: 900px){
    .ffm-grid-3{ grid-template-columns: 1fr; }
    .ffm-grid-2{ grid-template-columns: 1fr; }
    .ffm-btn{ min-width: 220px; width: 100%; max-width: 360px; }
    .ffm-cohort{ padding: 14px 14px; }
  }
</style>

