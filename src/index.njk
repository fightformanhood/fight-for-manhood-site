---
layout: base.njk
title: Fight for Manhood
---

<section class="hero">
  <h2>{{ home.hero_line_1 }}</h2>
  <h2 style="color:var(--gold); margin-top:-10px;">{{ home.hero_line_2 }}</h2>

  <p class="muted" style="margin-top:22px;">
    {{ home.hero_subhead }}
  </p>

  <p class="muted">
    {{ home.hero_details }}
  </p>

  <div style="margin-top:28px;">
    <a class="button" href="{{ home.primary_cta_link }}">{{ home.primary_cta_text }}</a>
    <a class="button" style="background:transparent; color:var(--gold); border:1px solid var(--gold);" href="{{ home.secondary_cta_link }}">{{ home.secondary_cta_text }}</a>
  </div>
</section>

{% for s in home.sections %}
<section class="section">
  <h3>{{ s.title }}</h3>
  {% for p in s.body.split("\n\n") %}
    <p class="{% if loop.index > 1 %}muted{% endif %}">{{ p }}</p>
  {% endfor %}
</section>
{% endfor %}
